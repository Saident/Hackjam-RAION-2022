<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/search_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">
        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Search"
            android:background="@drawable/bg_input"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:layout_marginTop="15dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ly1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_bar"
        android:paddingHorizontal="24dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/jatimpark2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="18dp"
                android:layout_marginVertical="10dp"
                android:paddingEnd="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Jawa Timur Park 2"
                    android:textStyle="bold"
                    android:textSize="24sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textColor="@color/black"
                    android:text="Jl. Oro-Oro Ombo No.9, Temas, Kec. Batu, Kota Batu, Jawa Timur 65315" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ly2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ly1"
        android:paddingHorizontal="24dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ancol"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="18dp"
                android:layout_marginVertical="10dp"
                android:paddingEnd="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Ancol"
                    android:textStyle="bold"
                    android:textSize="24sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textColor="@color/black"
                    android:text="Jl. Lodan Timur No.7, Ancol, Kec. Pademangan, Kota Jkt Utara, DKI Jakarta 14430" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_view2"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_marginHorizontal="26dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bot_nav_background"
        android:elevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/bt_home"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/ic_home"/>
            <Button
                android:id="@+id/bt_ticket"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/ic_ticket"/>
            <Button
                android:id="@+id/bt_search"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/ic_search"/>
            <Button
                android:id="@+id/bt_history"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/ic_history"/>
            <Button
                android:id="@+id/bt_profile"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/ic_profile"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:textSize="11sp"
                android:textAlignment="center"
                android:text="Home"/>
            <TextView
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:textSize="11sp"
                android:textAlignment="center"
                android:text="Ticket"/>
            <TextView
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:textSize="11sp"
                android:textAlignment="center"
                android:text="Search"/>
            <TextView
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:textSize="11sp"
                android:textAlignment="center"
                android:text="History"/>
            <TextView
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:textSize="11sp"
                android:textAlignment="center"
                android:text="Profile"/>
        </LinearLayout>
    </LinearLayout>

