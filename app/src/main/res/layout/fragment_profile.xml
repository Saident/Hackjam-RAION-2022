<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary2">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/white"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="336dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="48dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_white"
            android:layout_marginTop="36dp">
        </ImageView>

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/profile"></ImageView>

        <Button
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="200dp"
            android:background="@drawable/profile_add"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_profile"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:paddingHorizontal="24dp"
            android:text="Full Name"
            android:textColor="@color/black" />
        <EditText
            android:id="@+id/et_name"
            android:layout_marginHorizontal="24dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/tv_name"
            android:text="Name"
            android:textSize="16dp"
            android:paddingHorizontal="12dp"
            android:background="@drawable/bg_input"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"
            android:layout_alignTop="@+id/et_name"
            android:layout_alignEnd="@+id/et_name"
            android:layout_alignBottom="@+id/et_name"
            android:src="@drawable/edit" />
        <TextView
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:paddingHorizontal="24dp"
            android:text="Full Name"
            android:textColor="@color/black" />
        <EditText
            android:id="@+id/et_email"
            android:layout_marginHorizontal="24dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/tv_email"
            android:text="Email"
            android:textSize="16dp"
            android:paddingHorizontal="12dp"
            android:background="@drawable/bg_input"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"
            android:layout_alignTop="@+id/et_email"
            android:layout_alignEnd="@+id/et_email"
            android:layout_alignBottom="@+id/et_email"
            android:src="@drawable/edit" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_button"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_below="@id/et_email"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/relative1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/profile_lock"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Security"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginStart="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/profile_help"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help Center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginStart="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/profile_report"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report a Problem"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginStart="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/profile_terms"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Term of Use"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginStart="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/profile_logout"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log Out"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_marginHorizontal="26dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bot_nav_background"
        android:elevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/bt_home"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/ic_home"/>
            <Button
                android:id="@+id/bt_ticket"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/ic_ticket"/>
            <Button
                android:id="@+id/bt_search"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/ic_search"/>
            <Button
                android:id="@+id/bt_history"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/ic_history"/>
            <Button
                android:id="@+id/bt_profile"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/ic_profile"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:textSize="11sp"
                android:textAlignment="center"
                android:text="Home"/>
            <TextView
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:textSize="11sp"
                android:textAlignment="center"
                android:text="Ticket"/>
            <TextView
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:textSize="11sp"
                android:textAlignment="center"
                android:text="Search"/>
            <TextView
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:textSize="11sp"
                android:textAlignment="center"
                android:text="History"/>
            <TextView
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:textSize="11sp"
                android:textAlignment="center"
                android:text="Profile"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>